<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextAdventureGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item tools:targetApi="27" name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
        </item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/choice_btn_color</item>
        <item name="colorPrimaryVariant">@color/background_loose</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/orbitron</item>
    </style>
</resources>